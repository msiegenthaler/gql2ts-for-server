
# The base query
type Query {
    # Retrieve a person by name
    person(name:String): Person
}

union Friend = Person | Animal

# A type describing a person
type Person {
    # The persons name
    name: String!
    # The persons age in years
    age: Int!
    # Friendship relations to other persons
    friends: [Friend!]
}

type Animal {
  name: String!
  kind: String
}